@model IEnumerable<UserRoles.ViewModels.ReportViewModel>
@{
    ViewData["Title"] = "Reports Dashboard";
    var isManagerOrAdmin = User.IsInRole("Manager") || User.IsInRole("Admin");
}

<h2 class="mt-3">Reports Dashboard</h2>

@if (User.IsInRole("User"))
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Add New Report</a>
    </p>
}

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>S.No</th>
            <th>Date</th>
            <th>Task</th>
            <th>Note</th>
            <th>Comments (Created At)</th>
            <th>Reported To</th>
            @if (isManagerOrAdmin)
            {
                <th>User</th>
            }
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr><td colspan="8" class="text-center">No reports found.</td></tr>
        }
        else
        {
            var idx = 0;
            var currentUserId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
            foreach (var item in Model)
            {
                idx++;
                <tr>
                    <td>@idx</td>
                    <td>@item.Date.ToLocalTime().ToString("yyyy-MM-dd")</td>
                    <td>@item.Task</td>
                    <td style="max-width:320px; white-space:normal; word-break:break-word;">@item.Note</td>
                    <td>@item.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@item.ReportedTo</td>
                    @if (isManagerOrAdmin)
                    {
                        <td>
                            @if (!string.IsNullOrEmpty(item.FirstName))
                            {
                                @($"{item.FirstName} ({item.UserName})")
                            }
                            else
                            {

                                @item.UserName
                            }
                        </td>
                    }
                    <td>
                        <!-- Edit allowed for owner or Admin -->
                        @if (item.ApplicationUserId == currentUserId || User.IsInRole("Admin"))
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                        }
                        <!-- Delete allowed for owner, Manager, Admin -->
                        @if (item.ApplicationUserId == currentUserId || User.IsInRole("Manager") || User.IsInRole("Admin"))
                        {
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                        }
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
