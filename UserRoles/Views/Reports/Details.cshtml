@model UserRoles.ViewModels.ReportViewModel

@{
    ViewData["Title"] = "Report Details";
    bool isAdminOrManager = User.IsInRole("Admin") || User.IsInRole("Manager");
}

<div class="card mt-4 shadow-sm">
    <div class="card-header">
        <h4 class="mb-0">Report Details</h4>
    </div>

    <div class="card-body">
        <dl class="row">

            @* User info only for Admin / Manager *@
            @if (isAdminOrManager)
            {
                <dt class="col-sm-3">User</dt>
                <dd class="col-sm-9">
                    @Model.UserName
                </dd>
            }

            <dt class="col-sm-3">Date</dt>
            <dd class="col-sm-9">
                @Model.Date.ToString("yyyy-MM-dd")
            </dd>

            <dt class="col-sm-3">Task</dt>
            <dd class="col-sm-9">
                @Model.Task
            </dd>

            <dt class="col-sm-3">Note</dt>
            <dd class="col-sm-9">
                @Model.Note
            </dd>

            <dt class="col-sm-3">Reported To</dt>
            <dd class="col-sm-9">
                @Model.ReportedTo
            </dd>

            <dt class="col-sm-3">Created At</dt>
            <dd class="col-sm-9">
                @Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")
            </dd>
        </dl>

        @* ================= REVIEWER COMMENT =================
        @if (isAdminOrManager)
        {
            <hr />
            <h5 class="mt-3">Reviewer Comment</h5>

            <form asp-action="UpdateComment"
                  asp-controller="Reports"
                  method="post"
                  class="mt-2">
                @Html.AntiForgeryToken()

                <input type="hidden" name="id" value="@Model.Id" />

                <div class="mb-3">
                    <textarea name="reviewerComment"
                          class="form-control"
                          rows="4"
                          placeholder="Add comment for the user...">@Model.ReviewerComment</textarea>
                </div>

                <button type="submit" class="btn btn-primary">
                    Save Comment
                </button>
            </form>
        }
        else if (!string.IsNullOrWhiteSpace(Model.ReviewerComment))
        {
            <hr />
            <dt class="fw-bold">Reviewer Comment</dt>
            <dd class="mt-1">
                @Model.ReviewerComment
            </dd>
        }
    </div>  *@

    <div class="card-footer d-flex gap-2">
        <a asp-action="UserReports"
           asp-controller="Reports"
           asp-route-userId="@Model.ApplicationUserId"
           class="btn btn-secondary">
            ← Back to Reports
        </a>

        @if (isAdminOrManager)
        {
            <a asp-action="Index"
               asp-controller="Users"
               class="btn btn-outline-dark">
                ← Back to Users
            </a>
        }
    </div>
</div>
