@model UserRoles.Models.DailyReport

@{
    ViewData["Title"] = "Edit Report";
}

<h3 class="mb-3">Edit Report</h3>

<div class="card shadow-sm">
    <div class="card-body">

        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()

            <!-- Hidden Keys -->
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ApplicationUserId" />

            <!-- Date (READ ONLY) -->
            <div class="mb-3">
                <label class="form-label">Report Date</label>
                <input class="form-control"
                       value="@Model.Date.ToString("yyyy-MM-dd")"
                       readonly />
            </div>

            <!-- Task -->
            <div class="mb-3">
                <label asp-for="Task" class="form-label"></label>
                <input asp-for="Task"
                       class="form-control"
                       required />
                <span asp-validation-for="Task" class="text-danger"></span>
            </div>

            <!-- User Note -->
            <div class="mb-3">
                <label asp-for="Note" class="form-label">User Note</label>
                <textarea asp-for="Note"
                          class="form-control"
                          rows="4"
                          required></textarea>
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>

            <!-- Reviewer Comment (ADMIN / MANAGER) -->
            <div class="mb-4">
                <label asp-for="ReviewerComment" class="form-label">
                    Admin / Manager Comment
                </label>
                <textarea asp-for="ReviewerComment"
                          class="form-control"
                          rows="3"
                          placeholder="Add your comment here (optional)">
                </textarea>
            </div>

            <!-- Reported To (optional edit) -->
            <div class="mb-4">
                <label asp-for="ReportedTo" class="form-label"></label>
                <input asp-for="ReportedTo"
                       class="form-control"
                       placeholder="Admin, Manager" />
            </div>

            <!-- ACTION BUTTONS -->
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-success">
                    Save Changes
                </button>

                <a asp-action="UserReports"
                   asp-route-userId="@Model.ApplicationUserId"
                   class="btn btn-secondary">
                    Cancel
                </a>

                <a asp-action="UserReports"
                   asp-route-userId="@Model.ApplicationUserId"
                   class="btn btn-outline-dark ms-auto">
                    ← Back to Reports
                </a>
            </div>

        </form>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
