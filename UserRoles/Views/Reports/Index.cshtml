@model IEnumerable<UserRoles.ViewModels.ReportViewModel>

@{
    ViewData["Title"] = "Reports Dashboard";

    bool isManagerOrAdmin = User.IsInRole("Manager") || User.IsInRole("Admin");
    bool isUser = User.IsInRole("User");
    bool hasTodayReport = ViewBag.HasTodayReport ?? false;
}

<h2 class="mt-3">Reports Dashboard</h2>

<!-- ===================== ALERTS ===================== -->
<div id="alerts-container">
    @if (TempData["CreateSuccess"] != null)
    {
        <div class="alert alert-success auto-dismiss" data-timeout="5000">
            @TempData["CreateSuccess"]
        </div>
    }

    @if (TempData["CreateErrors"] != null)
    {
        <div class="alert alert-danger auto-dismiss" data-timeout="7000">
            @TempData["CreateErrors"]
        </div>
    }
</div>

<table class="table table-striped table-bordered mt-3">
    <thead>
        <tr>
            <th>S.No</th>
            <th>Date</th>
            <th>Task</th>
            <th>Note</th>
           
            <th>Reported To</th>
            <th>Comments</th>
            @if (isManagerOrAdmin)
            {
                <th>User</th>
            }
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>

        <!-- ===================== INLINE TODAY REPORT (USER ONLY) ===================== -->
        @if (isUser && !hasTodayReport)
        {
            <tr class="table-success">
                <form asp-action="CreateInline" method="post">
                    @Html.AntiForgeryToken()

                <td>—</td>
                <td>@DateTime.UtcNow.ToString("yyyy-MM-dd")</td>

                <td>
                    <input name="Task"
                           class="form-control"
                           placeholder="Today's task"
                           required />
                </td>

                <td>
                    <textarea name="Note"
                          class="form-control"
                          rows="2"
                          placeholder="Work details"
                          required></textarea>
                </td>

                <!-- COMMENTS: only text, no date -->
                <td>—</td>

                <td>
                    <select name="ReportedTo" class="form-select" required>
                        <option value="">Select</option>
                        <option value="Manager">Manager</option>
                        <option value="Admin">Admin</option>
                        <option value="Manager/Admin">Both</option>
                    </select>
                </td>

                <td>
                    <button type="submit" class="btn btn-sm btn-success">
                        Submit
                    </button>
                </td>
                </form>
            </tr>
        }

        <!-- ===================== EXISTING REPORTS ===================== -->
        @if (!Model.Any())
        {
            <tr>
                <td colspan="8" class="text-center">
                    No reports found.
                </td>
            </tr>
        }
        else
        {
            int index = 0;

            foreach (var item in Model)
            {
                index++;
                <tr>
                    <td>@index</td>
                    <td>@item.Date.ToLocalTime().ToString("yyyy-MM-dd")</td>
                    <td>@item.Task</td>

                    <td style="max-width:320px; word-break:break-word;">
                        @item.Note
                    </td>

                    <!-- COMMENTS: ONLY NOTE -->
                    <td>
                        @item.Note
                    </td>

                    <!-- REPORTED TO AS BADGES -->
                    <td>
                        @if (item.ReportedTo == "Manager")
                        {
                            <span class="badge bg-primary">Manager</span>
                        }
                        else if (item.ReportedTo == "Admin")
                        {
                            <span class="badge bg-warning text-dark">Admin</span>
                        }
                        else
                        {
                            <span class="badge bg-primary">Manager</span>
                            <span class="badge bg-warning text-dark ms-1">Admin</span>
                        }
                    </td>

                    @if (isManagerOrAdmin)
                    {
                        <td>
                            @(!string.IsNullOrEmpty(item.FirstName)
                                            ? $"{item.FirstName} ({item.UserName})"
                                            : item.UserName)
                        </td>
                    }

                    <td>
                        <a asp-action="Details"
                           asp-route-id="@item.Id"
                           class="btn btn-sm btn-outline-info">
                            Details
                        </a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

@section Scripts {
    <script>
        // Auto-dismiss alerts
        document.querySelectorAll('.auto-dismiss').forEach(alert => {
            const timeout = parseInt(alert.dataset.timeout || 5000);
            setTimeout(() => {
                alert.classList.add('fade');
                setTimeout(() => alert.remove(), 800);
            }, timeout);
        });
    </script>
}
