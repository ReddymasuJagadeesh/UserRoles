@model IEnumerable<UserRoles.ViewModels.ReportViewModel>
@{
    ViewData["Title"] = "Reports Dashboard";
    var isManagerOrAdmin = User.IsInRole("Manager") || User.IsInRole("Admin");
}

<h2 class="mt-3">Reports Dashboard</h2>

<!-- Alerts (Index consumes TempData) -->
<div id="alerts-container">
    @if (TempData["CreateSuccess"] != null)
    {
        <div class="alert alert-success auto-dismiss" role="alert" data-timeout="5000">
            @TempData["CreateSuccess"]
        </div>
    }
    @if (TempData["EditSuccess"] != null)
    {
        <div class="alert alert-success auto-dismiss" role="alert" data-timeout="5000">
            @TempData["EditSuccess"]
        </div>
    }
    @if (TempData["DeleteSuccess"] != null)
    {
        <div class="alert alert-success auto-dismiss" role="alert" data-timeout="5000">
            @TempData["DeleteSuccess"]
        </div>
    }
    @if (TempData["DeleteErrors"] != null)
    {
        <div class="alert alert-danger auto-dismiss" role="alert" data-timeout="7000">
            @TempData["DeleteErrors"]
        </div>
    }
</div>

@if (User.IsInRole("User"))
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Add New Report</a>
    </p>
}

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>S.No</th>
            <th>Date</th>
            <th>Task</th>
            <th>Note</th>
            <th>Comments (Created At)</th>
            <th>Reported To</th>
            @if (isManagerOrAdmin)
            {
                <th>User</th>
            }
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr><td colspan="8" class="text-center">No reports found.</td></tr>
        }
        else
        {
            var idx = 0;
            var currentUserId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
            foreach (var item in Model)
            {
                idx++;
                <tr>
                    <td>@idx</td>
                    <td>@item.Date.ToLocalTime().ToString("yyyy-MM-dd")</td>
                    <td>@item.Task</td>
                    <td style="max-width:320px; white-space:normal; word-break:break-word;">@item.Note</td>
                    <td>@item.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@item.ReportedTo</td>
                    @if (isManagerOrAdmin)
                    {
                        <td>
                            @if (!string.IsNullOrEmpty(item.FirstName))
                            {
                                @($"{item.FirstName} ({item.UserName})")
                            }
                            else
                            {
                                @item.UserName
                            }
                        </td>
                    }
                    <td>
                        @* Edit allowed for owner or Admin *@
                        @if (item.ApplicationUserId == currentUserId || User.IsInRole("Admin"))
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                        }

                        @* Inline POST form for Delete (owner, Manager, Admin) *@
                        @if (item.ApplicationUserId == currentUserId || User.IsInRole("Manager") || User.IsInRole("Admin"))
                        {
                            <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline ms-1"
                                  onsubmit="return confirm('Are you sure you want to delete this report?');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Auto-dismiss alerts with fade out.
        // Looks for elements with class "auto-dismiss" and optional data-timeout (ms).
        (function () {
            const alerts = document.querySelectorAll('.auto-dismiss');
            alerts.forEach(alert => {
                // default timeout 5000ms (5s)
                const timeout = parseInt(alert.getAttribute('data-timeout')) || 5000;

                // Start a timer to fade out then remove
                setTimeout(() => {
                    // add fade class (CSS will animate)
                    alert.classList.add('fading-out');

                    // after transition remove from DOM
                    alert.addEventListener('transitionend', () => {
                        if (alert && alert.parentNode) alert.parentNode.removeChild(alert);
                    });

                    // fallback removal in case transitionend doesn't fire
                    setTimeout(() => {
                        if (alert && alert.parentNode) alert.parentNode.removeChild(alert);
                    }, 1000);
                }, timeout);
            });
        })();
    </script>
}
