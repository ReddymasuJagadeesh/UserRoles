@using System.Security.Claims
@model IEnumerable<UserRoles.Models.DailyReport>

@{
    ViewData["Title"] = "Reports";

    DateTime today = ViewBag.Today ?? DateTime.Today;
    bool hasToday = ViewBag.HasToday ?? false;

    bool canSubmit = User.IsInRole("User") || User.IsInRole("Manager") || User.IsInRole("Admin");
    bool canManage = User.IsInRole("Admin") || User.IsInRole("Manager");

    string currentUserId = User.FindFirstValue(ClaimTypes.NameIdentifier);
    string targetUserId = ViewBag.TargetUserId as string;

    int? editId = Context.Request.Query.ContainsKey("editId")
        ? int.Parse(Context.Request.Query["editId"])
        : null;
}

@if (ViewBag.ReportOwnerName != null)
{
    <h5 class="text-muted mb-4">
        <strong>@ViewBag.ReportOwnerName</strong> Reports
    </h5>
}

<div class="table-responsive">
    <table class="table table-bordered table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th style="width:120px;">Date</th>

                <!-- ✅ SAME WIDTH -->
                <th style="width:320px;">Task</th>
                <th style="width:320px;">Note</th>

                <th style="width:260px;">Reviewer Comment</th>
                <th style="width:160px;">Reported To</th>
                <th style="width:200px;">Submitted By</th>
                <th style="width:220px;" class="text-center">Actions</th>
            </tr>
        </thead>

        <tbody>

            <!-- ================= SUBMIT TODAY ================= -->
            @if (canSubmit && !hasToday)
            {
                <tr class="table-success">
                    <td>
                        @today.ToString("dd-MM-yyyy")
                        <span class="badge bg-success ms-1">Today</span>
                    </td>

                    <!-- ✅ SAME WIDTH + HEIGHT -->
                    <td>
                        <textarea form="todayForm"
                              name="task"
                              rows="3"
                              class="form-control form-control-sm"
                              placeholder="Enter task"
                              required></textarea>
                    </td>

                    <td>
                        <textarea form="todayForm"
                              name="note"
                              rows="3"
                              class="form-control form-control-sm"
                              placeholder="Work details / comments"
                              required></textarea>
                    </td>

                    <td class="text-muted">—</td>

                    <td>
                        <div class="form-check">
                            <input class="form-check-input"
                                   form="todayForm"
                                   type="checkbox"
                                   name="reportedTo"
                                   value="Manager"
                                   checked />
                            <label class="form-check-label">Manager</label>
                        </div>

                        <div class="form-check">
                            <input class="form-check-input"
                                   form="todayForm"
                                   type="checkbox"
                                   name="reportedTo"
                                   value="Admin" />
                            <label class="form-check-label">Admin</label>
                        </div>
                    </td>

                    <td class="text-muted text-center">—</td>

                    <td class="text-center">
                        <form id="todayForm"
                              asp-action="CreateToday"
                              method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden"
                                   name="targetUserId"
                                   value="@targetUserId" />
                            <button class="btn btn-success btn-sm">
                                Submit
                            </button>
                        </form>
                    </td>
                </tr>
            }

            <!-- ================= REPORT HISTORY ================= -->
            @if (Model != null && Model.Any())
            {
                foreach (var r in Model)
                {
                    bool canEditThisRow =
                    canManage && r.ApplicationUserId != currentUserId;

                    bool isEditing = canEditThisRow && editId == r.Id;

                    <tr>
                        @if (isEditing)
                        {
                            <form asp-action="InlineUpdate" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@r.Id" />

                            <td>@r.Date.ToString("dd-MM-yyyy")</td>

                            <!-- ✅ SAME WIDTH + HEIGHT -->
                            <td>
                                <textarea name="task"
                              rows="3"
                              class="form-control form-control-sm"
                              required>@r.Task</textarea>
                            </td>

                            <td>
                                <textarea name="note"
                              rows="3"
                              class="form-control form-control-sm"
                              required>@r.Note</textarea>
                            </td>

                            <td>
                                <textarea name="reviewerComment"
                              rows="2"
                              class="form-control form-control-sm">@r.ReviewerComment</textarea>
                            </td>

                            <td>@r.ReportedTo</td>

                            <td>
                                <span class="badge bg-info">
                                    Report submitted by @r.SubmittedByRole
                                </span>
                            </td>

                            <td class="text-center">
                                <button class="btn btn-success btn-sm">
                                    Save
                                </button>
                                <a asp-action="UserReports"
                                   asp-route-userId="@r.ApplicationUserId"
                                   class="btn btn-secondary btn-sm">
                                    Cancel
                                </a>
                            </td>
                            </form>
                        }
                        else
                        {
                            <td>@r.Date.ToString("dd-MM-yyyy")</td>

                            <!-- ✅ SAME WIDTH + HEIGHT (READ MODE) -->
                            <td>
                                <textarea rows="3"
                              class="form-control form-control-sm"
                              readonly>@r.Task</textarea>
                            </td>

                            <td>
                                <textarea rows="3"
                              class="form-control form-control-sm"
                              readonly>@r.Note</textarea>
                            </td>

                            <td>
                                <textarea rows="2"
                              class="form-control form-control-sm"
                              readonly>@r.ReviewerComment</textarea>
                            </td>

                            <td>@r.ReportedTo</td>

                            <td>
                                <span class="badge bg-info">
                                    Report submitted by @r.SubmittedByRole
                                </span>
                            </td>

                            <td class="text-center">
                                <div class="d-inline-flex gap-2">

                                    <!-- ✅ DETAILS (ALL ROLES) -->
                                    <a asp-action="Details"
                                       asp-route-id="@r.Id"
                                       class="btn btn-info btn-sm">
                                        Details
                                    </a>

                                    @if (canEditThisRow)
                                    {
                                        <!-- ✅ EDIT -->
                                        <a asp-action="UserReports"
                                           asp-route-userId="@r.ApplicationUserId"
                                           asp-route-editId="@r.Id"
                                           class="btn btn-warning btn-sm">
                                            Edit
                                        </a>

                                        <!-- ✅ DELETE -->
                                        <form asp-action="Delete"
                                              asp-route-id="@r.Id"
                                              method="post"
                                              class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button class="btn btn-danger btn-sm"
                                                    onclick="return confirm('Delete this report?');">
                                                Delete
                                            </button>
                                        </form>
                                    }
                                </div>
                            </td>

                        }
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center text-muted py-3">
                        No reports available.
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
