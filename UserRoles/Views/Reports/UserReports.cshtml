@model IEnumerable<UserRoles.Models.DailyReport>

@{
    ViewData["Title"] = "Reports";

    DateTime today = ViewBag.Today != null
        ? (DateTime)ViewBag.Today
        : DateTime.Today;

    bool hasToday = ViewBag.HasToday != null && (bool)ViewBag.HasToday;
}

<h2 class="mb-4">Reports</h2>

<div class="table-responsive">
    <table class="table table-bordered table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th style="width:140px;">Date</th>
                <th style="width:280px;">Task</th>
                <th>Note</th>
                <th style="width:180px;">Reported To</th>
                <th style="width:120px;">Actions</th>
            </tr>
        </thead>
        <tbody>

            <!-- ================= SUBMIT TODAY ================= -->
            @if (!hasToday)
            {
                <form asp-action="CreateToday" method="post">
                    @Html.AntiForgeryToken()

                <tr class="table-success">
                    <td>
                        @today.ToString("yyyy-MM-dd")
                        <span class="badge bg-success ms-1">Today</span>
                    </td>

                    <td>
                        <input name="Task"
                               class="form-control form-control-sm"
                               placeholder="Enter task"
                               required />
                    </td>

                    <td>
                        <input name="Note"
                               class="form-control form-control-sm"
                               placeholder="Work details / comments"
                               required />
                    </td>

                    <td>
                        <div class="form-check">
                            <input class="form-check-input"
                                   type="checkbox"
                                   name="ReportedTo"
                                   value="Manager"
                                   id="managerCheck" />
                            <label class="form-check-label" for="managerCheck">
                                Manager
                            </label>
                        </div>

                        <div class="form-check">
                            <input class="form-check-input"
                                   type="checkbox"
                                   name="ReportedTo"
                                   value="Admin"
                                   id="adminCheck" />
                            <label class="form-check-label" for="adminCheck">
                                Admin
                            </label>
                        </div>
                    </td>

                    <td class="text-center">
                        <button type="submit" class="btn btn-success btn-sm">
                            Submit
                        </button>
                    </td>
                </tr>
                </form>
            }

            <!-- ================= REPORT HISTORY ================= -->
            @if (Model.Any())
            {
                foreach (var r in Model)
                {
                    <tr>
                        <td>@r.Date.ToString("yyyy-MM-dd")</td>
                        <td>@r.Task</td>
                        <td style="white-space: normal; word-break: break-word;">
                            @r.Note
                        </td>
                        <td class="text-center">@r.ReportedTo</td>
                        <td class="text-center">
                            <a asp-action="Details"
                               asp-route-id="@r.Id"
                               class="btn btn-info btn-sm">
                                Details
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center text-muted py-3">
                        No reports available.
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
