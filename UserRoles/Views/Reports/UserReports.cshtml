@using System.Security.Claims
@model IEnumerable<UserRoles.Models.DailyReport>

@{
    ViewData["Title"] = "Reports";

    DateTime today = ViewBag.Today ?? DateTime.Today;
    bool hasToday = ViewBag.HasToday ?? false;

    bool canSubmit = User.IsInRole("User") || User.IsInRole("Manager");
    bool canManage = User.IsInRole("Admin") || User.IsInRole("Manager");

    string currentUserId = User.FindFirstValue(ClaimTypes.NameIdentifier);

    int? editId = Context.Request.Query.ContainsKey("editId")
        ? int.Parse(Context.Request.Query["editId"])
        : null;
}


@if (ViewBag.ReportOwnerName != null)
{
    <h5 class="text-muted mb-4">
         <strong>@ViewBag.ReportOwnerName</strong> Reports
    </h5>
}

<div class="table-responsive">
    <table class="table table-bordered table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th style="width:140px;">Date</th>
                <th style="width:260px;">Task</th>
                <th>Note</th>
                <th style="width:260px;">Reviewer Comment</th>
                <th style="width:160px;">Reported To</th>
                <th style="width:220px;" class="text-center">Actions</th>
            </tr>
        </thead>

        <tbody>

            <!-- ================= SUBMIT TODAY (USER + MANAGER) ================= -->
            @if (canSubmit && !hasToday)
            {
                <tr class="table-success">
                    <td>
                        @today.ToString("yyyy-MM-dd")
                        <span class="badge bg-success ms-1">Today</span>
                    </td>

                    <td>
                        <input form="todayForm"
                               name="Task"
                               class="form-control form-control-sm"
                               placeholder="Enter task"
                               required />
                    </td>

                    <td>
                        <input form="todayForm"
                               name="Note"
                               class="form-control form-control-sm"
                               placeholder="Work details / comments"
                               required />
                    </td>

                    <td class="text-muted">—</td>

                    <td>
                        <div class="form-check">
                            <input class="form-check-input"
                                   form="todayForm"
                                   type="checkbox"
                                   name="ReportedTo"
                                   value="Manager" />
                            <label class="form-check-label">Manager</label>
                        </div>

                        <div class="form-check">
                            <input class="form-check-input"
                                   form="todayForm"
                                   type="checkbox"
                                   name="ReportedTo"
                                   value="Admin" />
                            <label class="form-check-label">Admin</label>
                        </div>
                    </td>

                    <td class="text-center">
                        <form id="todayForm"
                              asp-action="CreateToday"
                              method="post">
                            @Html.AntiForgeryToken()
                            <button class="btn btn-success btn-sm">
                                Submit
                            </button>
                        </form>
                    </td>
                </tr>
            }

            <!-- ================= REPORT HISTORY ================= -->
            @if (Model != null && Model.Any())
            {
                foreach (var r in Model)
                {
                    bool canEditThisRow =
                    canManage && r.ApplicationUserId != currentUserId;

                    bool isEditing = canEditThisRow && editId == r.Id;

                    <tr>
                        @if (isEditing)
                        {
                            <form asp-action="InlineUpdate" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@r.Id" />

                            <td>@r.Date.ToString("yyyy-MM-dd")</td>

                            <td>
                                <input name="task"
                                       value="@r.Task"
                                       class="form-control form-control-sm"
                                       required />
                            </td>

                            <td>
                                <input name="note"
                                       value="@r.Note"
                                       class="form-control form-control-sm"
                                       required />
                            </td>

                            <td>
                                <input name="reviewerComment"
                                       value="@r.ReviewerComment"
                                       class="form-control form-control-sm"
                                       placeholder="Reviewer comment" />
                            </td>

                            <td>@r.ReportedTo</td>

                            <td class="text-center">
                                <div class="d-inline-flex gap-2">
                                    <button class="btn btn-success btn-sm">
                                        Save
                                    </button>

                                    <a asp-action="UserReports"
                                       asp-route-userId="@r.ApplicationUserId"
                                       class="btn btn-secondary btn-sm">
                                        Cancel
                                    </a>
                                </div>
                            </td>
                            </form>
                        }
                        else
                        {
                            <td>@r.Date.ToString("yyyy-MM-dd")</td>
                            <td>@r.Task</td>
                            <td>@r.Note</td>
                            <td class="text-muted">@r.ReviewerComment</td>
                            <td>@r.ReportedTo</td>

                            <td class="text-center">
                                <div class="d-inline-flex gap-2">
                                    <a asp-action="Details"
                                       asp-route-id="@r.Id"
                                       class="btn btn-info btn-sm">
                                        Details
                                    </a>

                                    @if (canEditThisRow)
                                    {
                                        <a asp-action="UserReports"
                                           asp-route-userId="@r.ApplicationUserId"
                                           asp-route-editId="@r.Id"
                                           class="btn btn-warning btn-sm">
                                            Edit
                                        </a>

                                        <form asp-action="Delete"
                                              asp-route-id="@r.Id"
                                              method="post"
                                              class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button class="btn btn-danger btn-sm"
                                                    onclick="return confirm('Delete this report?');">
                                                Delete
                                            </button>
                                        </form>
                                    }
                                </div>
                            </td>
                        }
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center text-muted py-3">
                        No reports available.
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
