@model IEnumerable<UserRoles.Models.DailyReport>

@{
    ViewData["Title"] = "Reports";

    DateTime today = ViewBag.Today != null
        ? (DateTime)ViewBag.Today
        : DateTime.Today;

    // ✅ FIXED KEY NAME
    bool hasToday = ViewBag.HasTodayReport != null && (bool)ViewBag.HasTodayReport;
}

<h2 class="mb-4">Reports</h2>

<div class="table-responsive">
    <table class="table table-bordered table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th style="width:140px;">Date</th>
                <th style="width:280px;">Task</th>
                <th>Note</th>
                <th style="width:180px;">Reported To</th>
                <th style="width:120px;">Actions</th>
            </tr>
        </thead>

        <tbody>

            <!-- ================= SUBMIT TODAY ================= -->
            @if (!hasToday)
            {
                <tr class="table-success">
                    <td>
                        @today.ToString("yyyy-MM-dd")
                        <span class="badge bg-success ms-1">Today</span>
                    </td>

                    <td colspan="4">
                        <form asp-action="CreateToday" method="post" class="row g-2 align-items-center">
                            @Html.AntiForgeryToken()

                            <div class="col-md-3">
                                <input name="Task"
                                       class="form-control form-control-sm"
                                       placeholder="Enter task"
                                       required />
                            </div>

                            <div class="col-md-4">
                                <input name="Note"
                                       class="form-control form-control-sm"
                                       placeholder="Work details / comments"
                                       required />
                            </div>

                            <div class="col-md-3">
                                <div class="form-check">
                                    <input class="form-check-input"
                                           type="checkbox"
                                           name="ReportedTo"
                                           value="Manager"
                                           id="managerCheck" />
                                    <label class="form-check-label" for="managerCheck">
                                        Manager
                                    </label>
                                </div>

                                <div class="form-check">
                                    <input class="form-check-input"
                                           type="checkbox"
                                           name="ReportedTo"
                                           value="Admin"
                                           id="adminCheck" />
                                    <label class="form-check-label" for="adminCheck">
                                        Admin
                                    </label>
                                </div>
                            </div>

                            <div class="col-md-2 text-end">
                                <button type="submit" class="btn btn-success btn-sm">
                                    Submit
                                </button>
                            </div>
                        </form>
                    </td>
                </tr>
            }

            <!-- ================= REPORT HISTORY ================= -->
            @if (Model.Any())
            {
                foreach (var r in Model)
                {
                    <tr>
                        <td>@r.Date.ToString("yyyy-MM-dd")</td>
                        <td>@r.Task</td>
                        <td style="white-space: normal; word-break: break-word;">
                            @r.Note
                        </td>
                        <td class="text-center">@r.ReportedTo</td>
                        <td class="text-center">
                            <a asp-action="Details"
                               asp-route-id="@r.Id"
                               class="btn btn-info btn-sm">
                                Details
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center text-muted py-3">
                        No reports available.
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
