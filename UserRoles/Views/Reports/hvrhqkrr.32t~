            }

            <dt class="col-sm-3">Date</dt>
            <dd class="col-sm-9">@Model.Date.ToString("yyyy-MM-dd")</dd>

            <dt class="col-sm-3">Task</dt>
            <dd class="col-sm-9">@Model.Task</dd>

            <dt class="col-sm-3">Note</dt>
            <dd class="col-sm-9">@Model.Note</dd>

            <dt class="col-sm-3">Reported To</dt>
            <dd class="col-sm-9">@Model.ReportedTo</dd>
            @*@if (canManage && !string.IsNullOrWhiteSpace(Model.ReviewerComment))
