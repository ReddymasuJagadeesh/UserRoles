@using UserRoles.Models
@inject Microsoft.AspNetCore.Identity.UserManager<Users> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @*<title>@ViewData["Title"] - UserRoles</title>*@ 

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/UserRoles.styles.css" asp-append-version="true" />

    <style>
        .nav-static {
            cursor: default;
            color: rgba(0,0,0,.65);
        }

        .nav-username {
            font-weight: 600;
            color: rgba(0,0,0,.85);
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">

                <!-- Brand (text only, no navigation) -->
                <span class="navbar-brand">UserRoles</span>

                <button class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 align-items-center">

                        <!-- Home (text only, no view) -->
                        @*<li class="nav-item">
                            <span class="nav-link nav-static">Home</span>
                        </li>*@ 

                        <!-- Logged-in user display (single place) -->
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            var currentUser = await UserManager.GetUserAsync(User);
                            var displayName =
                            currentUser?.FirstName
                            ?? currentUser?.Email
                            ?? User.Identity.Name;

                            <li class="nav-item">
                                <span class="nav-link nav-username">@displayName</span>
                            </li>
                        }

                        <!-- USERS (Admin / Manager only) -->
                        @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark"
                                   asp-controller="Users"
                                   asp-action="Index">
                                    Users
                                </a>
                            </li>
                        }

                        <!-- REPORTS (User only) -->
                        @if (User.IsInRole("User") || User.IsInRole("Manager"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark"
                                   asp-controller="Reports"
                                   asp-action="Index">
                                    Reports
                                </a>
                            </li>
                        }

                        <!-- Login / Logout -->
                        <partial name="_LoginPartial" />
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @*<footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - UserRoles
        </div>
    </footer>*@ 

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
